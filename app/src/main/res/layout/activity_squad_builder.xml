<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.rahulchandrashekhar.footywiz.SquadBuilder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 9"
        android:id="@+id/player_9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background = "@drawable/roundedbutton"
        android:layout_marginTop="28dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 11"
        android:id="@+id/player_11"
        android:layout_below="@+id/player_9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background = "@drawable/roundedbutton"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 6"
        android:id="@+id/player_6"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/player_11"
        android:layout_toRightOf="@+id/player_3"
        android:background = "@drawable/roundedbutton"
        android:layout_toEndOf="@+id/player_3"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 8"
        android:id="@+id/player_8"
        android:layout_alignBottom="@+id/player_6"
        android:layout_toRightOf="@+id/player_6"
        android:layout_toEndOf="@+id/player_6"
        android:layout_marginLeft="24dp"
        android:background = "@drawable/roundedbutton"
        android:layout_marginStart="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 7"
        android:id="@+id/player_7"
        android:layout_alignBottom="@+id/player_11"
        android:layout_alignParentRight="true"
        android:background = "@drawable/roundedbutton"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:id="@+id/player_3"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/player_6"
        android:layout_alignParentLeft="true"
        android:background = "@drawable/roundedbutton"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 5"
        android:id="@+id/player_5"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/player_3"
        android:background = "@drawable/roundedbutton"
        android:layout_alignLeft="@+id/player_6"
        android:layout_alignStart="@+id/player_6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 4"
        android:id="@+id/player_4"
        android:layout_alignBottom="@+id/player_5"
        android:background = "@drawable/roundedbutton"
        android:layout_alignLeft="@+id/player_8"
        android:layout_alignStart="@+id/player_8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/player_2"
        android:layout_alignBottom="@+id/player_3"
        android:background = "@drawable/roundedbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/player_1"
        android:layout_below="@+id/player_5"
        android:background = "@drawable/roundedbutton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 10"
        android:id="@+id/player_10"
        android:layout_alignTop="@+id/player_11"
        android:background = "@drawable/roundedbutton"
        android:layout_centerHorizontal="true"/>
</LinearLayout>
